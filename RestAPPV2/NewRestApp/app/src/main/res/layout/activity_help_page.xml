<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpPage"
    android:background="@drawable/background_main">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="HELP"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:fontFamily="serif-monospace" />

    <Button
        android:id="@+id/finished_help"
        android:layout_width="299dp"
        android:layout_height="89dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@mipmap/started_button"
        android:onClick="finished_help"
        android:text="Get Started" />

    <LinearLayout
        android:layout_width="276dp"
        android:layout_height="368dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="69dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="41dp">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The app is developed to perform basic functions to an API.The 4 main requests will consist of GET, PUT, POST and DELETE
The app is linked to an SQLite database that handles all the upcoming data and stores it "
            android:textAlignment="center"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="GET Request\nThis is where you extract information from the  database with the given parameter"
            android:textAlignment="center"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="PUT Request\nThis request will help you edit the specific ID you want to edit and send it the new parameters"
            android:textAlignment="center"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POST Request\nThis request will help you add employees into the database"
            android:textAlignment="center"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:text="DELETE Request\nHelps you delete a certain ID from the database \n \n Let's get started?"
            android:textAlignment="center"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed" />

    </LinearLayout>


</RelativeLayout>